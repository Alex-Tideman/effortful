<div id="login" class="row">
  <div class="col s6">
    <%= form_for(:session, url: login_path) do |f| %>
        <div class="row">
          <div class="input-field col s6">
            <%= f.label :email %>
            <%= f.text_field :email, class: "validates" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <%= f.label :password, "Password (min 6 characters)" %>
            <%= f.password_field :password, class: "validates" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s4">
            <button class="waves-effect waves-light btn-large" name="action"><%= f.submit "SUBMIT", id: "user-create" %>
              <i class="material-icons left">send</i>
            </button>
          </div>
        </div>

        <div class="row">
          <div id="login-or" class="input-field col s2">
            <em><strong>OR</strong></em>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <a class="waves-effect waves-light btn-large" href="<%= auth_path %>"><i class="material-icons left">vpn_key</i>Login with Google</a>
          </div>
        </div>
        </div>
    <% end %>
    </div>
</div>